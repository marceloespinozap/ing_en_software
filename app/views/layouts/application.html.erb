<!DOCTYPE html>
<html>
  <head>
    <title>Proyecto</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">

                  <% if user_signed_in?  %>

                         <% if current_user.role == "client"%>
                            <li class="col-md top_padding_list">
                            <%= link_to "Eres un : Cliente", attentions_path %>
                            </li>
                            <% end %>

                         <% if current_user.role == "professional"%>
                            <li class="col-md top_padding_list">
                            <%= link_to "Eres un : Profesional", attentions_path %>
                            </li>
                         <% end %>

                         <% if current_user.role == "admin"%>
                            <li class="col-md top_padding_list">
                            <%= link_to "Eres un : Administrador", attentions_path %>
                            </li>
                         <% end %>      


          <% if current_user.role == "admin"%>
           <%= link_to "informacion cliente  ", clients_path,:class =>"nav-link" %>
          </li>
          <li class="nav-item dropdown">
              <%= link_to "informacion profesional ", professionals_path, :class =>"nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Crear una nueva atencion", new_attention_path, :class =>"nav-link"%>
          </li>
          <% end %>
     

               <% if current_user.role == "professional"%>
           <li class="nav-item">
            <%= link_to "Crear una nueva atencion", new_attention_path, :class =>"nav-link"%>
          </li>
          <% end %> 
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_out">Salir</a>
          </li>

         <% end %>

        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
