<% users=User.all %>



<div class="container col-12">
  <br>
   <h3>Administradores</h3>

   <table class="table table-hover ">
     <tr>
       <thead class="thead-dark">
          <th>id</td>
          <th>email</th>
          <th>nombre</th>
          <th>direccion</th>
          <th>Profesional</th>
          <th>Descripcion</th>
        </thead>
      </tr>
      <%users.each do |user|%>
      <tr>
        <%if user.id != current_user.id %>
          <%if user.role == "admin" %>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.nombre %></td>
            <td><%= user.direccion %></td>
            <td><%= user.fecha_nacimiento %></td>
            <td><%= user.numero_contacto %></td>
            <td><%= link_to 'Editar', edit_user_path(user) %> </td>
            <td><%= link_to "Destroy", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } %></td>
          <% end %>
         <% end %>
       <%end%>
    </tr>
  </table>
</div>
