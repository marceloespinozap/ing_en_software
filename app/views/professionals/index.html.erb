

<section>


<% if @professional.empty? %>
<%= "no existen profesionales registrados registradas" %>


<%else%>

<h1>Profesionales registrados actualmente</h1>
<div class="table-resp-cont">

  <table class="table table-striped table-dark table-resp">
<tr class="bg-info">
    <th>id</td>
    <th>specialidad</th>
    <th>inicio </th>
    <th>final</th>
    <th>contrato</th>
    <th>profesional</th>
    <th>VER</th>
    <th>EDITAR</th>
    <th>ELIMINAR</th>
  </tr>


<% @professional.each do |professional|  %>
<tr class="bg-dark">


  <td><%= professional.id %></td>
  <td><%= Specialty.find(professional.specialty_id).name %></td>
  <td><%= professional.start_contract %></td>
  <td><%= professional.end_contract %></td>
  <td><%= professional.type_contract %></td>
  <td><%=  User.find(professional.user_id).nombre  %></td>

  <td><%= link_to 'Ver', professional_path(professional), :style =>"color:white;",:class =>"far fa-eye"%> </td>

  <td><%= link_to  'Editar', edit_professional_path(professional),  :style =>"color:white;",:class =>"far fa-edit" %> </td>

  <td><%= link_to 'Eliminar', professional ,   :method => :delete,  data: { confirm: "esta seguro que desea eliminar el registro?"} , :style =>"color:white;",:class =>"far fa-trash-alt" %></td>

 </tr>

<% end %>
  <%end%>


  </table>
</div>
</section>

