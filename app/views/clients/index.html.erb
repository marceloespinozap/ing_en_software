

<div class="container col-12">
  <section >
    <br>

  <% if @client.empty? %>
    <div class='alert alert-info' role='alert'>
      No hay <strong>Clientes</strong> registrados
    </div>
  <%else%>

  <h3>Clientes registrados</h3>




  <table class="table table-hover ">
    <thead class="thead-dark">

   <tr>

      <th>Nombre usuario</th>
      <th>Email</th>
      <th>Movil</th>
      <th>prevision</th>

    </tr>
  </thead>

  <% @client.each do |client|  %>
  <tr>





    <td><%= User.find(client.user_id).nombre %></td>
    <td><%= User.find(client.user_id).email %></td>
    <td><%= User.find(client.user_id).numero_contacto %></td>
    <%if client.prevision == 1 %>
    <td><%= "fonasa"    %></td>

  <%else %>
    <td><%= "isapre"    %></td>

    <%end%>

   </td>
   </tr>

    <%end%>

    <%end%>

    </table>
  </section>

</div>
